{% if node.field_header_background_image %}
	{% set image_bg_url = file_url(node.field_header_background_image.0.entity.uri.value) %}
{% else %}
	{% set image_bg_url = page_title_image_bg %}
{% endif %}
{% set sub_title = node.field_sub_title.0.value %}
<div class="header-title white" data-parallax="scroll" data-position="top" data-natural-height="600" data-natural-width="1920" data-image-src="{{ image_bg_url }}">
    <div class="container">
        <div class="title-base">
            <hr class="anima" />
            <h1>{{ title }}</h1>
            {% if sub_title %}
            <p>{{ sub_title|raw }}</p>
        	{% endif %}
        </div>
    </div>
</div>