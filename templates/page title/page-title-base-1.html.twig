{% if node.field_header_background_image %}
    {% set image_bg_url = file_url(node.field_header_background_image.0.entity.uri.value) %}
{% else %}
    {% set image_bg_url = page_title_image_bg %}
{% endif %}

{% set sub_title = node.field_sub_title.0.value %}
<div class="header-base bg-cover white" style="background-image: url({{ image_bg_url }})">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="title-base text-left">
                    <h1>{{ title }}</h1>
                    {% if sub_title %}
                    <p>{{ sub_title|raw }}</p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-3">
                {% if page.breadcrumb %}
                    {{ page.breadcrumb }}
                {% endif %}
            </div>
        </div>
    </div>
</div>