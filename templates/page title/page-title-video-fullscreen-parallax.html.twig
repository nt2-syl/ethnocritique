{% if node.field_header_background_image %}
    {% set image_bg_url = file_url(node.field_header_background_image.0.entity.uri.value) %}
{% else %}
    {% set image_bg_url = page_title_image_bg %}
{% endif %}

{% if node.field_upload_video %}
    {% set Uploadvideo = file_url(node.field_upload_video.0.entity.uri.value) %}
{% else %}
    {% set Uploadvideo = page_title_video_bg %}
{% endif %}

{% set sub_title = node.field_sub_title.0.value %}
<div class="header-video header-parallax full-screen-title white">
    <div class="videobox layer-parallax">
        <video autoplay loop muted poster="{{ image_bg_url }}">
            <source src="{{ Uploadvideo }}" type="video/mp4">
        </video>
    </div>
    <div class="overlaybox">
        <div class="container">
            <div class="title-base">
                <hr class="anima" />
                <h1>{{ title }}</h1>
                {% if sub_title %}
                <p>{{ sub_title|raw }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>