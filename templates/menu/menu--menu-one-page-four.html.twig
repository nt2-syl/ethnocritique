{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% set classes_menu = ['side-menu','ms-simple'] %}
    <ul {{ attributes.addClass(classes_menu) }} id="menu">
    {% for item in items %}
      <li{{ item.attributes }}>
          <a href="{{ item.url }}">{{ item.title|raw }}</a>
          {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}