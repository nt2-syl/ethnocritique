{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <div {{ attributes }} id="twosides-menu">
    {% for item in items %}
      <div {{ item.attributes }} class="twoside-open"><hr />{{ item.title|raw }}</div>
      {% if item.below %}
        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
      {% endif %}
    {% endfor %}
    </div>
  {% endif %}
{% endmacro %}